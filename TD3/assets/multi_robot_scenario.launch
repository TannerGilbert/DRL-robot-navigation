<launch>
  <arg name="gui" value="true" />

  <!-- Gazebo  -->
  <include file="$(find multi_robot_scenario)/launch/empty_world.launch">
    <arg name="gui" value="$(arg gui)" />
  </include>

  <!-- Robot with diff drive -->
  <include file="$(find multi_robot_scenario)/launch/robot.gazebo.launch">
    <arg name="model" value="waffle" />
    <arg name="robot_position" value="-x 0.0 -y 0.0 -z 0.01 -R 0 -P 0 -Y +0.0" />
  </include>

  <!-- RVIZ -->
  <node pkg="rviz" type="rviz" name="rviz"
    args="-d $(find multi_robot_scenario)/launch/turtlebot3.rviz" />

</launch>